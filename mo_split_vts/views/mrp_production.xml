<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="mrp_production_form_view_inherit_split_qty" model="ir.ui.view">
			<field name="name">mrp.production.form.split.inherit</field>
			<field name="model">mrp.production</field>
			<field name="inherit_id" ref="mrp.mrp_production_form_view"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='origin']" position="after">
					<field name="main_mo_id" string="Parent MO"/>
				</xpath>
				<xpath expr="//button[@name='action_assign']" position="after">
					<button name="open_slip_wizard" 
					attrs="{'invisible':[('state','not in',('confirmed'))]}" string="Split MO" type="object" class="oe_highlight" />
				</xpath>
			</field>
		</record>
	</data>	
</odoo>
