<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="stock_picking_contenedor_form">
        <field name="name">stock.picking.contenedor.form</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="as_generate_control" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='extra']" position="after">
                <page string="Contenedor" name="contenedor">
                    <field name="as_contenedor_id">
                        <tree string="Contenedor" editable="bottom" create="true" delete="false">
                            <field name="name" />
                            <field name="as_lote" widget="many2many_tags" />
                            <field name="as_pesob_kg" />
                            <field name="as_peson_kg" />
                            <field name="as_pesob_lb" />
                            <field name="as_peson_lb" />
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//button[@name='button_validate']" position="after">
                <button name="create_quality_from_picking" type="object" class="btn-primary" string="Generar controles" attrs="{'invisible':[('as_generate_control','=',True)]}" />
            </xpath>
        </field>
    </record>


</odoo>