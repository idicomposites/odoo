<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="as_sale_order_view_form">
			<field name="name">as.sale.order.view.form</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
			 
				<xpath expr="//button[@name='action_view_invoice']" position="after">
					<button type="object" name="open_entries" class="oe_stat_button" icon="fa-list-alt">
						<field name="as_cantidad_mo" widget="statinfo"/>
					</button>
					
				</xpath>
			</field>
		</record>
	</data>
</odoo>  
