<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_lotes" model="ir.ui.view">
        <field name="name">stock.production.lot.inherit.form</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="after">
                <field name="as_lot_supplier" />
            </xpath>
        </field>
    </record>
    <record id="view_product_template_codey_idi_form" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='uom_po_id']" position="after">
                    <field name="as_format_type_id" />
                    <field name="as_color" />
                </xpath>

            </data>
        </field>
    </record>

    <record id="as_certificate_tree" model="ir.ui.view">
        <field name="name">Formatos C. Calidad</field>
        <field name="model">product.certificate.format</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="as_code" />
                <field name="as_slogan" />
                <field name="as_code_iso" />
                <field name="as_code_iso_lot" />

            </tree>
        </field>
    </record>


    <record id="as_certificate_form" model="ir.ui.view">
        <field name="name">Formatos C. Calidad</field>
        <field name="model">product.certificate.format</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    Formatos Certificados Calidad
                </header>
                <sheet>
                    <group col="4">
                        <field name="name" />
                        <field name="as_code" />
                        <field name="as_slogan" />
                        <field name="as_code_iso" />
                        <field name="as_sfooter" />
                        <field name="as_code_iso_lot" />
                        <field name="image" widget="image" class="oe_avatar" />

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="as_certificate_action" model="ir.actions.act_window">
        <field name="name">Formatos C. Calidad</field>
        <field name="res_model">product.certificate.format</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('as_certificate_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('as_certificate_form')})]" />
    </record>

    <menuitem id="menu_format_config" action="as_certificate_action" name="Formatos de Certificados"
        parent="stock.menu_stock_inventory_control" sequence="12" />

</odoo>