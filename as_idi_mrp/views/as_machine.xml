<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="as_machine_tree" model="ir.ui.view">
            <field name="name">Maquinas</field>
            <field name="model">as.machine</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="as_numero" />
                    <field name="as_min" />
                    <field name="as_max" />
                </tree>
            </field>
        </record>


        <record id="as_machine_form" model="ir.ui.view">
            <field name="name">Maquinas</field>
            <field name="model">as.machine</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        Maquinas
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="name" />
                            <field name="as_numero" />
                            <field name="as_min" />
                            <field name="as_max" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="as_machine_action" model="ir.actions.act_window">
            <field name="name">Maquinas</field>
            <field name="res_model">as.machine</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('as_machine_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('as_machine_form')})]" />
        </record>

        <menuitem 
        action='as_machine_action' 
        id='as_marp_machine'
        parent='mrp.menu_mrp_bom' 
        sequence='10' />
    </data>
</odoo>