<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="as_mrp_production_form" model="ir.ui.view">
        <field name="name">as_mrp.production_form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="as_machine_id" />
                <field name="as_lote_numero" />
                <field name="as_lote_peso" />
                <field name="as_tanque" />
            </xpath>
            <xpath expr="//field[@name='bom_id']" position="after">
                <field name="as_lot" />
                <field name="as_sale" />
            </xpath>
        </field>
    </record>
    <record id="as_mrp_production_tree" model="ir.ui.view">
        <field name="name">as_mrp.production_tree</field>
        <field name="model">mrp.production</field>
        <field name="priority">20</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="as_sale" />
                <field name="as_lot" />
            </xpath>
        </field>
    </record>
        <record id="as_mrp_nucl" model="ir.ui.view">
            <field name="name">stock.move.form.mrp</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="mrp.view_stock_move_raw_tree" />
            <field name="type">form</field>
            <field name="priority" eval="5" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_uom']" position="after">
                    <field name="as_lotes" />
                    
                </xpath>
            </field>
        </record>
</odoo>